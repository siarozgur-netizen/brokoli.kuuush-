<Window x:Class="OverlayTutorial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="OverlayTutorial"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        Background="#000000"
        Opacity="1.0"
        PreviewKeyDown="OnWindowPreviewKeyDown"
        PreviewKeyUp="OnWindowPreviewKeyUp">
    <Grid>
        <Border BorderBrush="#24FFFFFF"
                BorderThickness="1"
                CornerRadius="6"
                Margin="1"
                IsHitTestVisible="False"
                Panel.ZIndex="900" />

        <Grid.RowDefinitions>
            <RowDefinition x:Name="SearchRowDefinition" Height="36" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border x:Name="SearchBarContainer"
                Grid.Row="0"
                Margin="8,6,8,2"
                Background="#111111"
                BorderBrush="#2B2B2B"
                BorderThickness="1"
                CornerRadius="4">
            <Grid>
                <TextBox x:Name="SearchTextBox"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="White"
                         CaretBrush="White"
                         FontSize="13"
                         Padding="10,6"
                         VerticalContentAlignment="Center"
                         KeyDown="OnSearchTextBoxKeyDown"
                         TextChanged="OnSearchTextBoxTextChanged"
                         GotFocus="OnSearchTextBoxGotFocus"
                         LostFocus="OnSearchTextBoxLostFocus" />
                <TextBlock x:Name="SearchPlaceholderTextBlock"
                           Text="Search YouTube…"
                           Foreground="#7D7D7D"
                           FontSize="13"
                           Margin="12,0,0,0"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False" />
                <ProgressBar x:Name="NavigationProgressBar"
                             Height="2"
                             VerticalAlignment="Top"
                             Margin="4,1,4,0"
                             IsIndeterminate="True"
                             Visibility="Collapsed"
                             Foreground="#66C7FF"
                             Background="#00000000"
                             IsHitTestVisible="False" />
            </Grid>
        </Border>

        <wv2:WebView2 x:Name="OverlayWebView"
                      Grid.Row="1"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch" />

        <TextBlock x:Name="ModeIndicatorTextBlock"
                   Text="PASS 100%"
                   Foreground="White"
                   FontSize="12"
                   Margin="0,8,12,0"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Visibility="Collapsed"
                   IsHitTestVisible="False"
                   Panel.ZIndex="1000" />

        <TextBlock x:Name="HotkeyHintTextBlock"
                   Text="O show/hide • I interact • S search • F focus • Q quit"
                   Foreground="#E6FFFFFF"
                   FontSize="11"
                   Margin="10,0,10,10"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Visibility="Collapsed"
                   IsHitTestVisible="False"
                   Panel.ZIndex="1000" />
    </Grid>
</Window>
